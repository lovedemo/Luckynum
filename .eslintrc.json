{
  "root": true,
  "env": {
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "prettier"],
  "rules": {
    "no-undef": "warn",
    "no-console": "off",
    "no-var": "off",
    "prefer-const": "warn"
  }
}
